@model DEPI_GraduationProject.Models.StockRequest

@{
    ViewData["Title"] = "Create Stock Request";
}

<h2>Create Stock Request</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="FromLocationId" class="control-label">From Location</label>
        <select asp-for="FromLocationId" class="form-control" asp-items="ViewBag.Locations">
            <option value="">-- Select From Location --</option>
        </select>
        <span asp-validation-for="FromLocationId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ToLocationId" class="control-label">To Location</label>
        <select asp-for="ToLocationId" class="form-control" asp-items="ViewBag.Locations">
            <option value="">-- Select To Location --</option>
        </select>
        <span asp-validation-for="ToLocationId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductCode" class="control-label">Product</label>
        <select asp-for="ProductCode" class="form-control" asp-items="ViewBag.ProductCodes">
            <option value="">-- Select Product --</option>
        </select>
        <span asp-validation-for="ProductCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity" class="control-label">Quantity</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" asp-controller="StockRequest" class="btn btn-secondary ml-2">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}