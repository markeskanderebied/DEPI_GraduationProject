@model IEnumerable<DEPI_GraduationProject.Models.Location>

@{
    ViewData["Title"] = "Select Branch";
}

<!-- Include Bootstrap if not already included in layout -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

<div class="container mt-4">
    <div class="card shadow-sm rounded-4 p-4">
        <h2 class="mb-4 text-center">Select a Branch to View Inventory</h2>

        <form id="locationForm">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <select class="form-select form-select-lg mb-3" id="locationSelect">
                        <option value="">-- Select a Branch --</option>
                        @foreach (var location in Model)
                        {
                            <option value="@Url.Action("ByLocation", "ViewOtherInventory", new { id = location.Id })">
                                @location.Name (@location.Type)
                            </option>
                        }
                    </select>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    document.getElementById("locationSelect").addEventListener("change", function () {
        if (this.value) {
            window.location.href = this.value;
        }
    });
</script>
